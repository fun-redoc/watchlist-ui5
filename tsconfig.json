{
	"compilerOptions": {
		"target": "es2022",
		"module": "es2022",
		"moduleResolution": "node",
		"skipLibCheck": true,
		"allowJs": true,
		"checkJs": false,
		"strict": true,
		"strictNullChecks": false,
		"strictPropertyInitialization": false,
		"rootDir": "./webapp",
		"baseUrl": "./",
		"types": ["@openui5/types", "@types/qunit"],
		"paths": {
			"rsh/watchlist/ui5/*": ["./webapp/*"],
			"unit/*": ["./webapp/test/unit/*"],
			"integration/*": ["./webapp/test/integration/*"]
		},
        "composite": true,
        "allowImportingTsExtensions":true,
        "noEmit": true,
	},
	"include": ["./webapp/**/*"],
	"exclude": ["./webapp/coverage/**/*"],
	"typeRoots": [
		"./node_modules/@types",
		"./node_modules/@sapui5/types"
		]
}

