<mvc:View   xmlns="sap.m"
			xmlns:f="sap.f"
            xmlns:mvc="sap.ui.core.mvc"
			xmlns:core="sap.ui.core"
			xmlns:rshcontrols="rsh.watchlist.ui5.control"
			xmlns:form="sap.ui.layout.form"
			controllerName="rsh.watchlist.ui5.controller.Wealth"
			height="100%"
>
	<Page 	title="TODO"
			showNavButton="true"
			navButtonPress=".onNavBack"	
			class= "sapUiResponsivePadding--header" 
	>
		<content>
			<f:GridList id="transactionList"
				class="sapUiResponsiveMargin"
				width="auto"
				items="{ path: 'wealth>/',
						sorter: { path: 'wealth>aggregations/symbol', group:false }}" >
				<f:GridListItem >
					<ObjectHeader
					 	responsive="true"
						fullScreenOptimized="true"
						intro="{wealth>yFinData/longName}"
						title="{wealth>aggregations/symbol}"
						titleLevel="H4"
						number="{
							parts:[{path:'wealth>aggregations/totalCostValue'},{path:'wealth>aggregations/currency'}],
							type: 'sap.ui.model.type.Currency',
							formatOptions: {showMeasure: false}
						}"
						numberUnit="{wealth>aggregations/currency}"
						class="sapUiResponsivePadding" 
					>
						<statuses>
							<ObjectStatus 
								title="{i18n>regularMarketPrice}"
								text="{wealth>yFinData/regularMarketPrice}"
								state="None" />
							<ObjectStatus
								title="{i18n>currentValue}"
								text="{= ${wealth>yFinData/regularMarketPrice}*${wealth>aggregations/amountInStock}}"
								state="Success" />
						</statuses>
						<attributes>
							<ObjectAttribute text="{i18n>Amount} {wealth>aggregations/amountInStock}" />
							<ObjectAttribute text="{i18n>totalBuyFee} {wealth>aggregations/totalBuyFee}" />
							<ObjectAttribute text="{i18n>totalSellFee} {wealth>aggregations/totalSellFee}" />
							<ObjectAttribute text="{i18n>totalYealdOnSold} {wealth>aggregations/totalYealdOnSold}" />
							<ObjectAttribute
								title="Link "
								text="www.sap.com"
								active="true"
								press="handleLinkObjectAttributePress" />
							<ObjectAttribute
								text="{i18n>transactions}"
								active="true"
								press="onPress" />
						</attributes>
					</ObjectHeader>
				</f:GridListItem>
			</f:GridList>
		</content>
	</Page>
</mvc:View>